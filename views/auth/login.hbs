<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log in</a></li>
        <li class="tab col s6"><a href="#register">Sign up</a></li>
      </ul>
    </div>
    
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="l-email" name="email" type="email" class="validate" required>
          <label for="l-email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="l-password" name="password" type="password" class="validate" required>
          <label for="l-password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <p><a href="/auth/reset">Forgot password?</a></p>

        <button type="submit" class="btn btn-primary">Log in</button>
      </form>
    </div>

    <div id="register" class="col s6 offset-s3">

      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}

      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input id="r-email" name="email" type="email" class="validate" required>
          <label for="r-email">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Enter name"></span>
        </div>

        <div class="input-field">
          <input id="r-password" name="password" type="password" class="validate" required>
          <label for="r-password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <div class="input-field">
          <input id="repeat" name="repeat" type="password" class="validate" required>
          <label for="repeat">Repeat password</label>
          <span class="helper-text" data-error="Repeat password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary">Sing up</button>
      </form>
    </div>
  </div>
</div>