{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["off", "windows"],
        "no-underscore-dangle": "warn",
        "consistent-return": "warn",
        "arrow-parens": "warn",
        "prefer-promise-reject-errors": "warn",
        "no-return-assign": "warn",
        "no-param-reassign": "warn",
        "arrow-body-style": "warn"
    }
}